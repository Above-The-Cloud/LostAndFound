<!--pages/wyq/wyq.wxml-->
  <view class="background">
<!-- 导航条   -->
<view class="navbar">  
  <text wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">{{item}}</text>  
</view>  

<!--lost-->  
<view hidden="{{currentTab!==0}}">  
  <form bindsubmit="formSubmit" bindreset="formReset">
  <view class="contain">

    <view class='text' style="white-space: pre-line">
     <textarea placeholder="请输入信息..." focus="{{focus}}" name="input" style="width:100%"/>
    </view>

     <view class='picture'>
      <view class='choose_pic' bindtap="choose_picture" >
        <view>
          <image src='../../images/edit/chosepic.png' class='pic' name='pic'></image>
        </view>

      </view>
      </view>
<view class="chosepic">
    <view wx:for="{{pics}}" wx:for-index="index" wx:for-item="item">
         <!-- <text>{{pics}}</text>  -->
         <image src='{{item}}' name='pic' mode="aspectFit"></image> 
    </view>
</view>
    <!-- <image wx:if='{{tempFilePaths}}' src='{{tempFilePaths}}' name='picc' mode="aspectFit"></image> -->
  <!--classify button-->  
<view class="btn" bindtap="powerDrawer" size='mini' data-statu="open">分类</view>  
<!--mask-->  
<view class="drawer_screen" bindtap="powerDrawer" data-statu="close" wx:if="{{showModalStatus}}"></view>  
<!--content-->  
<!--使用animation属性指定需要执行的动画-->  
<view animation="{{animationData}}" class="drawer_attr_box" wx:if="{{showModalStatus}}">  
  <!--drawer content-->  
  <view class="drawer_content">  
    <view class="drawer_title line">校园卡</view>  
    <view class="drawer_title line">雨伞</view>  
    <view class="drawer_title line">钱包</view>  
  </view>  
</view> 
    <view><button type="primary" size='mini' formType="submit" bindtap="stateswitch">发布</button></view>
  </view>

</form>

</view>  
  
