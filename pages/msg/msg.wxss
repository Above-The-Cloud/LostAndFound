/* pages/msg/msg.wxss */
.con {
  display: flex;
  flex-direction: column;/*主轴方向*/
  justify-content: space-between; /*主轴上的对齐方式*/
  align-items: center;  /*交叉轴对齐方式*/
  background-color: #f2f2f2;
} 
.banners {
  width: 100%;
  height: 10px;
  position:absolute;
  top: 0;
}

.left{
  display: flex;
  width: 95%;
  height:80rpx;
  flex-direction: column;/*主轴方向*/
  justify-content: space-between; /*主轴上的对齐方式*/
  align-items: flex-start;  /*交叉轴对齐方式*/
}

.newmsg{
  display: flex;
  width:95%;
  height: 50%;
  flex-direction: column;
  justify-content: space-around;
  align-items: space-around;  
}

.msgbox{
  display: flex;
  flex-direction: row;
  flex-basis: column;
  width: 100%;
  height: 150rpx;

  border-radius: 2%;
  border-width: 1px;
  border-color: #ddd;
  border-style: solid;
  background-color: #fff; 

  justify-content:space-around;
  align-items: center;
}

 
.btn{
  flex-direction: column;
  align-self: center;
} 
.userpic{
  display: flex;
  width: 140rpx;
  /* height: 145rpx; */
  height: 130rpx;
  align-self: center;
}
.username{
  /* width: 400rpx; */
  display: flex;
  font-style: normal;
  background-color: #fff;
  /* text-align: center; */
}
.timetext{
  /* width: 400rpx; */
  display: flex;
  font-size: x-small;
}
.seebutton{
  display: flex;
  background-color: #1AAD19;
  color: whitesmoke;
}
