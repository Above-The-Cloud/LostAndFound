/* pages/login/login.wxss */
page {
  display: block;
  min-height: 100%;
  background-color: #ffffff;
}
.picker{
  padding: 19rpx 26rpx;
  background-color: #FFFFFF;
}

.cells {
  position: relative;
  margin-top: 1.17647059em;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 17px;
}
.cells__title {
  margin-top: .77em;
  margin-bottom: .3em;
  padding-left: 15px;
  padding-right: 15px;
  color: #999999;
  font-size: 14px;
}
.cells_after-title {
  margin-top: 0;
}
.cell {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cell_input {
  padding-top: 0;
  padding-bottom: 0;
}
.label {
  width: 105px;
  word-wrap: break-word;
  word-break: break-all;
}
.input {
  font-size: 16px;
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}
.cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.cell__hd{
   padding-left: 0 px;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 50 rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}


.page {
  line-height: 3.0;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
}
.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}
.page-section-title{
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.btn-area{
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}

.nameImage, .keyImage{
  margin-left: 0px;
  width: 18px;
  height: 18px
}
.ecnuImage{
  margin-left: 0px;
  width:50px;
  height: 50px;
}
.logoImage{
  margin-right: 0px;
  width:50px;
  height: 50px;
}
.logo-container{
  margin-left: 90px;
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 50%;
  align-items:center;
}
.cells:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}
.foot{
  bottom: 10px;
}
.info{
  color: gray;
  font-family: 黑体;
  font-size: 13px;
  /* font-weight:bold; */
}
.text-container{
  text-align: center;
}
.cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}

