/*pages/myinfo/myinfo.wxss */
.contain{
  position: relative;
  flex-direction: column;  /*主轴方向*/
  justify-content: center; /*主轴上的对齐方式*/
  vertical-align: bottom;
  width: 100vw;
  height: 170px; 
}

.contain .mask{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;  
  background-color: rgba(0, 0, 0, .6);
   z-index: 1; 
}

.user_ID{
  position: absolute;
  text-align: center;
  margin-top: 10%;
  display: flex;  
  flex-direction: column;
  align-items: center;
  width: 100%;
  color: #fff;
  top: 0;
  left: 0;
  z-index: 2;
}

.userinfo-avatar {
  width: 144rpx;
  height: 144rpx;
  border-radius: 144rpx;
  vertical-align: bottom;

}
.user_infomation{
  text-align: center;
  margin-top: 0%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; /*交叉轴对齐方式*/
  z-index: 2;
}
.userinfo-nickname {
  margin-top: 4.1%;
  font-size: 32rpx;
  text-align: center;
}
.userinfo-idnumber{
  font-size: 30rpx;   
  color: #fff;         
 
}
.userinfo-wxnumber{
  font-size: 30rpx;   
  color: #fff;         

}


.con{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.article-title{
  margin-bottom: 10rpx;
  font-size: 30rpx;
  padding:10px;
}
