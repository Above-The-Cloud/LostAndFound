.news-item-container {
  background-color: #f2f2f2;
  width: 100%;
  position: absolute;
  top:170px;
}

.news-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 8px;
  padding-top: 8px;
  padding-right: 8px;
  padding-bottom: 8px;
  margin-top: 3px;
  background-color: #fff;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
}

.userinfo{
  display: flex;
  flex-direction: row;
}
.username
{
  position: relative;
  width: 150px;
  left: 10px;
  font-size: 16px;
  color:grey;
}
.time
{
  position: relative;
  width:250px;
  font-size: 12px;
  color:grey;
}
.hover
{
  color:blue;
}
.detail
{
  position:relative;
  left:37%;
  font-size: 18px;
}
.news-item-right{
  display: flex;
  flex-direction: row;
  width: 280px;
  height: 180px;
}

.news-image{
  width: 100px;
  height: 100px;
  margin: 5px;
}
.image-container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.icon-image
{
  width:40px;
  height: 40px;
  border-radius:40px; 
}

.news-item-title{
  text-indent:50px;
  font-size: 16px;
}


.delpic{
  position:relative;
